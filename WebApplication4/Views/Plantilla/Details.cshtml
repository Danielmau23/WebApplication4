@model WebApplication4.Models.correo

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Enviar Correo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.idPlantilla)

        <div class="form-group">
            @Html.LabelFor(model => model.para, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.para)
                @Html.ValidationMessageFor(model => model.para)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.asunto, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.asunto)
                @Html.ValidationMessageFor(model => model.asunto)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.mensaje, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.mensaje)
                @Html.ValidationMessageFor(model => model.mensaje)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enviar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}